<div class="container">
  <div class="new-card card mt-3">
    <div class="container form-card m-2">
      <%= simple_form_for @user do |f| %>
        <%= f.input :username, label: "Enter a username"%>
        <%= f.input :photo, as: :file, label: "Upload an avatar" %>
        <%= f.submit class: 'btn btn-light m-2' %>
        <%= link_to 'Back to Main', users_path, class: 'btn btn-light m-2' %>
      <% end %>
    </div>
  </div>
</div>
